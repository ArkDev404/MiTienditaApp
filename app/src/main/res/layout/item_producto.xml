<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/containterProducto"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fotoProducto"
            android:layout_height="80dp"
            android:layout_width="80dp"
            android:padding="5dp"
            android:src="@drawable/bottle_tonic"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtNombreProd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            android:maxLines="1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_margin="@dimen/padd_10"
            android:layout_toEndOf="@id/fotoProducto"
            android:layout_toStartOf="@id/txtPrecioProd"
            android:layout_centerVertical="true"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtPrecioProd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Precio"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_margin="@dimen/padd_10"
            android:drawableStart="@drawable/ic_price"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>