<resources>

    <style name="ActivitiesTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="actionMenuTextColor">#FFF</item>
        <item name="actionOverflowButtonStyle">@style/ActionBarIconColor</item>
    </style>

    <style name="ActionBarIconColor" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">#FFF</item>
    </style>

    <style name="FloatingIconColor" parent="Widget.Design.FloatingActionButton">
        <item name="android:tint">#FFF</item>
    </style>

    <style name="ActivitiesTheme.ImageView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/image_button</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="itemLarge" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:maxLines">1</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="MyTheme.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyTheme.DayNight.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyTheme.DayNight.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
